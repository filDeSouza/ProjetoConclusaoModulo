<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetalhePratoActivity">

    <ImageView
        android:id="@+id/imageViewPrato"
        android:layout_width="412dp"
        android:layout_height="265dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurante1" />

    <TextView
        android:id="@+id/textViewPrato"
        android:layout_width="378dp"
        android:layout_height="61dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="16dp"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#F7F4F4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPrato" />

    <TextView
        android:id="@+id/textViewDetalhePrato"
        android:layout_width="373dp"
        android:layout_height="397dp"
        android:layout_marginTop="36dp"
        android:gravity="center|top"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPrato" />
</androidx.constraintlayout.widget.ConstraintLayout>